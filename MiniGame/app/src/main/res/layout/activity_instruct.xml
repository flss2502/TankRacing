<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen2"
    tools:context=".InstructActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="368dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/racing_background"
        android:text="Hướng Dẫn Chơi Đua Xe Tăng"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hướng dẫn 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">



                <TextView
                    android:id="@+id/tvInstructions1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFEB3B"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="1. Trong trò chơi, có tổng cộng 4 loại xe tăng khác nhau để bạn có thể chọn."
                    android:layout_weight="1"
                    android:padding="16dp"/>

                <ImageView
                    android:id="@+id/imgTank1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tank_1"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/imgTank2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tank_2"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/imgTank3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tank_3"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/imgTank4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tank_4"
                    android:layout_marginEnd="16dp"/>

            </LinearLayout>

            <!-- Hướng dẫn 2 -->
            <TextView
                android:id="@+id/tvInstructions2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFEB3B"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="2. Chọn một hoặc nhiều loại xe tăng mà bạn muốn đặt cược."
                android:padding="16dp"/>

            <!-- Hướng dẫn 3 -->
            <TextView
                android:id="@+id/tvInstructions3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFEB3B"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="3. Nhập số tiền cược cho mỗi loại xe tăng bạn đã chọn. Bạn có thể đặt cược cho mỗi loại xe tăng một số tiền khác nhau."
                android:padding="16dp"/>

            <!-- Hướng dẫn 4 -->
            <TextView
                android:id="@+id/tvInstructions4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFEB3B"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="4. Nhấn nút 'Start' để bắt đầu cuộc đua."
                android:padding="16dp"/>

            <!-- Hướng dẫn 6 -->
            <TextView
                android:id="@+id/tvInstructions6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFEB3B"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="5. Sau khi cuộc đua kết thúc, màn hình kết quả sẽ hiện ra để thông báo kết quả."
                android:padding="16dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở về Màn hình chính"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
